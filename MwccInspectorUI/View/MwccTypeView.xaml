<UserControl x:Class="MwccInspectorUI.View.MwccTypeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MwccInspectorUI.View"
             xmlns:mwcctypes="clr-namespace:MwccInspector.MwccTypes;assembly=MwccInspector"
             d:DataContext="{d:DesignInstance Type=mwcctypes:TypeBase}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Padding="2">
        <GroupBox.Header>
            <TextBlock Text="{Binding Type, StringFormat=Type {0}}" />
        </GroupBox.Header>
        <ContentControl Content="{Binding}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type mwcctypes:TypeBasicType}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Basic Type" FontWeight="Bold" Grid.Column="0" />
                        <TextBlock Text="{Binding}" Grid.Column="1"/>
                    </Grid>
                </DataTemplate>
                <DataTemplate DataType="{x:Type mwcctypes:TypePointer}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Pointer to" FontWeight="Bold" Grid.Column="0" />
                        <TextBlock Text="{Binding TargetType}" Grid.Column="1"/>
                    </Grid>
                </DataTemplate>
                <DataTemplate DataType="{x:Type mwcctypes:TypeClass}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Name" FontWeight="Bold" Grid.Column="0" />
                        <local:InlineHashNameNodeView Grid.Column="1" DataContext="{Binding ClassName}" />
                    </Grid>
                </DataTemplate>
                <DataTemplate DataType="{x:Type mwcctypes:TypeFunc}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Return Type" FontWeight="Bold" Grid.Column="0" />
                        <TextBlock Text="{Binding FuncType}" Grid.Column="1"/>
                        <TextBlock Margin="0, 5" Text="Arguments" FontWeight="Bold" Grid.Row="1" Grid.ColumnSpan="2"/>
                        <ListView Grid.Row="2" Grid.ColumnSpan="2" ItemsSource="{Binding FuncArgs}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Argument Name" Width="Auto">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <local:InlineHashNameNodeView DataContext="{Binding Path=Name}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn DisplayMemberBinding="{Binding Path=Type}" Header="Argument Type" Width="Auto"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </DataTemplate>
                <DataTemplate DataType="{x:Type mwcctypes:TypeBase}">
                    <TextBlock Text="{Binding ., StringFormat=Unhandled {0}}" Grid.Column="1"/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </GroupBox>
</UserControl>
